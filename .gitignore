# ===============================================
# FastKart E-commerce Platform - Root .gitignore
# ===============================================
# This file prevents sensitive data from being committed to GitHub

# ===============================================
# ENVIRONMENT VARIABLES & CONFIG FILES
# ===============================================
# Laravel Environment Files
.env
.env.*
!.env.example
!.env.testing.example

# Environment backups
.env.backup
.env.local
.env.production
.env.staging
.env.development

# Configuration overrides
config.local.php
config.production.php

# ===============================================
# SENSITIVE AUTHENTICATION & API KEYS
# ===============================================
# Database credentials
database.php.local
database.production.php

# API Keys and Secrets
**/config/services.local.php
**/config/auth.local.php
jwt-secret.key
oauth-*.key
*.pem
*.key
*.p12
*.pfx

# AWS and Cloud Credentials
aws-credentials
.aws/
gcp-credentials.json
azure-credentials.json

# Payment Gateway Keys
stripe-*.key
paypal-*.key
razorpay-*.key

# Social Media App Secrets
facebook-*.key
google-*.key
twitter-*.key

# ===============================================
# LARAVEL SPECIFIC FILES
# ===============================================
# Laravel storage
**/storage/app/*
!**/storage/app/.gitignore
!**/storage/app/public/.gitignore

**/storage/framework/cache/*
!**/storage/framework/cache/.gitignore

**/storage/framework/sessions/*
!**/storage/framework/sessions/.gitignore

**/storage/framework/testing/*
!**/storage/framework/testing/.gitignore

**/storage/framework/views/*
!**/storage/framework/views/.gitignore

**/storage/logs/*
!**/storage/logs/.gitignore

# Laravel dotenv editor storage
**/storage/dotenv-editor/

# Laravel caches
**/bootstrap/cache/*
**/bootstrap/cache/*.php
!**/bootstrap/cache/.gitignore

